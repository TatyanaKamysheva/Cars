<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:oracle:thin:@localhost:1521:car</property>
        <property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="connection.username">CAR</property>
        <property name="connection.password">1111</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <mapping class="com.cars.shared.models.Manager"/>
        <mapping class="com.cars.shared.models.Customer"/>
        <mapping class="com.cars.shared.models.Attribute"/>
        <mapping class="com.cars.shared.models.User"/>
        <mapping class="com.cars.shared.models.Purchase"/>
        <mapping class="com.cars.shared.models.Automobile"/>
    </session-factory>
</hibernate-configuration>
